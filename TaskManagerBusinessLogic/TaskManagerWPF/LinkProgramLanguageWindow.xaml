<Window x:Class="TaskManagerWPF.LinkProgramLanguageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManagerWPF"
        mc:Ignorable="d"
        Title="Форма привязки языка программирования к разработчику" Height="152" Width="438.667">
    <Grid>
        <Label x:Name="label_developer" Content="Разработчик:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_program_language" Content="Язык программирования:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBox_program_language" DisplayMemberPath="LanguageName" SelectedValuePath="Id" HorizontalAlignment="Left" Margin="167,45,0,0" VerticalAlignment="Top" Width="255"/>
        <TextBox x:Name="textBox_developer" HorizontalAlignment="Left" Height="23" Margin="167,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="255"/>
        <Button x:Name="button_link" Content="Привязать" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="412" Height="41" Click="button_link_Click"/>
    </Grid>
</Window>
